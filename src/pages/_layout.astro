---
import '~/styles/resets.css';
import '~/styles/tokens.css';
let title = 'Meow'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>{title}</title>
		<meta name="color-scheme" content="dark light" />
		<style is:inline>
			@layer reset, tokens, global, components, page, overrides;
		</style>
	</head>

	<body>
		<slot></slot>
		<style is:inline>
			@import url("https://unpkg.com/open-props/shadows.min.css") layer(tokens.props);
		</style>
		<style is:global>
			@layer global {
				html {
					font-family: system-ui, sans-serif;
				}

				body {
					background: var(--background-2);
					color: var(--text-2);
					font-size: var(--step-0);
				}

				h1 {
					color: var(--text-1);
					font-size: var(--step-4);
				}

				h2 {
					color: var(--text-1);
					font-size: var(--step-2);
				}

				:focus-visible {
					outline: 2px solid var(--accent-1);
					outline-offset: 2px;
				}

				::selection {
					background: var(--accent-2);
				}
			}
		</style>
	</body>
</html>
