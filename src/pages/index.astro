<style>
	@layer page {
		main {
			max-width: min(50ch, 100%);
			display: grid;
			gap: var(--space-xs);
			padding-block: var(--space-m);
			padding-inline: var(--space-s);
			align-self: start;
		}

		form {
			display: grid;
			gap: var(--space-xs);
		}

		label {
			display: grid;
			gap: var(--space-3xs);
			color: var(--text-2);
		}

		hr {
			margin-block: var(--space-xs);
		}

		.cta {
			border: none;
			background-color: var(--accent-2);
			color: var(--text-1);
		}
	}
</style>
